@{
    ViewBag.Title = "Inicio";
}

<div class="jumbotron">
    <h1>Sistema de registro de entradas en biblioteca</h1>
</div>

<div class="container">
    <div class="row">
        <form method="post">
            <h4>Ingresa tu matrícula para iniciar</h4>
            <input id="matricula" name="matricula" type="text" class="form-control input-lg" autocomplete="off"/>
            <input type="submit" class="btn btn-primary btn-success btn-lg" value="Ingresar" style="margin-top: 10px;" />
        </form>
    </div>
</div>